<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Styles/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.yuuko-0.9.9.7.min.js"></script>
    <script src="/yuuko/js"></script>
    <script src="~/Scripts/site.js"></script>
</head>
<body>
    <div class="nav">
        <div class="container">
            <a href="#" style="font-size:x-large">计算机系专业建设平台</a>
            <a href="/">文章信息</a>
            @if (User.Identity.IsAuthenticated && ViewBag.CurrentUser.Role == Qqhru.Models.UserRole.超级管理员)
            {
                <a href="/Teacher">教师信息</a>
                <a href="/Group">课组管理</a>
            }
            <a href="/Class">课程信息</a>
            @if (User.Identity.IsAuthenticated)
            {
                <a href="/Forum">论坛交流</a>
            }
            @if (User.Identity.IsAuthenticated && ViewBag.CurrentUser.Role == Qqhru.Models.UserRole.老师)
            {
                <a href="/Teacher/Show/@ViewBag.CurrentUser.ID">我的资料</a>
            }
            @if (User.Identity.IsAuthenticated)
            {
                <a href="/Home/Logout" style="float:right">退出平台</a>
            }
            else
            {
                <a href="/Home/Login" style="float:right">登录</a>
            }
        </div>
    </div>
    <div class="container wrap-cont">
        @RenderBody()
        <div class="clr"></div>
        <div class="footer">
           
                <p>&copy; @DateTime.Now.Year - 齐齐哈尔大学 软件112 李纪磊 毕业设计</p>
           
        </div>
    </div>
    <script>
        var YuukoToken = '@Session["YuukoToken"]';
    </script>
</body>
</html>